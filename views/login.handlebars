<div class="pt-4 d-flex justify-content-around">
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="text-center">Login</h2>
    <form class="form login-form mt-4">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input mb-3" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-secondary mt-3" type="submit">login</button>
      </div>
    </form>
  </div>
</div>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="text-center">Sign Up</h2>
     <form class="form signup-form mt-4">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input mb-3" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password: (minimum 8 characters)</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <label for="budget-signup">Budget:</label><br>
        <input class="form-input mb-3" type="text" id="budget-signup" />
      </div>
      <div class="form-group mt-4">
        <button class="btn btn-secondary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
</div>


<script src="./js/login.js"></script>
