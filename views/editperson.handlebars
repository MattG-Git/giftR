<div class="row mt-4">
  <div class="col-md-6">
    <h2>Edit Person</h2>

    <form class="form edit-person-form mb-3" data-id="{{id}}">
      <div class="form-group">
        <label class="mb-3 pr-2" for="name">Name</label>
        <input class="form-input" type="text" id="name" name="name" value="{{name}}"/>
      </div>
      <div class="form-group">
        <label for="budget">Budget</label>
        <input class="form-input" id="budget" name="budget" value="{{budget}}"></input>
        <label for="gift-name">Gift</label>
        <input class="form-input" id="gift-name" name="gift-name" value="{{gift.name}}"></input>
        <label for="price">Price</label>
        <input class="form-input" id="price" name="price" value="{{gift.price}}"></input>
        <label for="location">Gift Location</label>
        <input class="form-input" id="location" name="location" value="{{gift.location}}"></input>
      </div>
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/add.js"></script>