<div class="d-flex justify-content-center mt-4">
    <div class="card text-center" style="width: 18rem;">
    <div class="card-body">
    <h2>Add a Gift</h2>
    <form class="form add-gift-form mb-3" data-id={{id}}>
      <div class="form-group">
          <label for="gift-name">Gift</label>
          <input class="form-input" id="gift-name" name="gift-name"></input>
        </div>
        <div class="form-group mt-3">
          <label for="price">Price</label>
          <input class="form-input" id="price" name="price"></input>
        </div>
          <div class="form-group mt-3">
            <label for="location">Gift Location</label>
            <input class="form-input" id="location" name="location"></input>
          </div>
      </div>
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Add Gift</button>
      </div>
    </form>
  </div>
  </div>
</div>

<script src="/js/addGift.js"></script>